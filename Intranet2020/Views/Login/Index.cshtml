@{
    Layout = null;
    ViewBag.Title = "Login - Sistema de Boletas";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />

    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/512/18842/18842107.png">

    <title>@ViewBag.Title</title>

    @* <link rel="icon" href="favicon.ico" /> *@

    @Styles.Render("~/Content/vendors/morris.js/morris.css")
    @Styles.Render("~/Content/vendors/jquery-toggles/css/toggles.css")
    @Styles.Render("~/Content/vendors/jquery-toggles/css/themes/toggles-light.css")
    @Styles.Render("~/Content/vendors/jquery-toast-plugin/dist/jquery.toast.min.css")
    @Styles.Render("~/Content/dist/css/style.css")
    @Styles.Render("~/Content/Main.css")

    <style>
        body {
            background: #f3f6fa;
        }

        .login-card {
            background: #fff;
            border-radius: 18px;
            padding: 40px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            width: 100%;
            max-width: 460px;
        }

        .side-bg {
            background-image: url('@Url.Content("~/Content/images/bg1.jpg")');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }

        .brand-img {
            max-height: 70px;
        }

        .btn-primary-custom {
            background: #006837;
            color: #fff;
            border-radius: 10px;
            padding: 12px;
            font-size: 18px;
            border: none;
            width: 100%;
        }

        .btn-primary-custom:hover {
            background: #015a32;
        }

        .title-main {
            font-size: 42px;
            font-weight: 700;
        }

        .footer-text {
            font-size: 13px;
            opacity: .7;
        }

        /* === RESPONSIVE === */
        @@media (max-width: 991px) {
            .title-main {
                font-size: 32px;
            }
            .login-card {
                padding: 30px;
            }
        }

        @@media (max-width: 768px) {
            .side-bg {
                display: none !important;
            }
            .login-card {
                margin: 40px auto;
                box-shadow: none;
                padding: 25px;
            }
            body {
                background: #fff;
            }
        }

        @@media (max-width: 480px) {
            .title-main {
                font-size: 26px;
            }
            .brand-img {
                max-height: 55px;
            }
        }
    </style>
</head>

<body>

    <input type="hidden" id="urlWebApi" value="@System.Configuration.ConfigurationManager.AppSettings["urlWebApi"]" />
    <input type="hidden" id="urlMvc" value="@System.Configuration.ConfigurationManager.AppSettings["urlMvc"]" />

    <div class="container-fluid">
        <div class="row min-vh-100 justify-content-center align-items-center">

            <div class="col-md-6 side-bg d-none d-md-block"></div>

            <div class="col-md-6 d-flex justify-content-center">
                <div class="login-card">

                    <div class="text-center mb-30">
                        <img class="brand-img" src="@Url.Content("~/Content/images/logo.png")" alt="Logo">
                    </div>

                    <h1 class="title-main mb-10 text-center">Bienvenido</h1>
                    <p class="text-center mb-30">Accede al Sistema de Boletas</p>

                    <form id="form-singup" data-parsley-validate>

                        <div class="form-group">
                            <label>Usuario</label>
                            <input class="form-control" name="vUsuario" id="vUsuario"
                                   type="text" placeholder="Ingrese usuario" data-parsley-required />
                        </div>

                        <div class="form-group">
                            <label>Contraseña</label>
                            <input class="form-control" name="vContrasena" id="vContrasena"
                                   type="password" placeholder="Ingrese contraseña" data-parsley-required />
                        </div>

                        <button id="btn-form-singup" class="btn btn-primary-custom" type="submit">
                            Ingresar
                        </button>

                        <div class="text-center mt-3">
                            <span id="js-spinner" class="spinner-waiting"></span>
                        </div>

                    </form>

                    <p class="text-center footer-text mt-20">
                        Desarrollado por la Sub Unidad de Tecnologías de la Información — 2025
                    </p>

                </div>
            </div>

        </div>
    </div>

    @Scripts.Render("~/Content/vendors/jquery/dist/jquery.min.js")
    @Scripts.Render("~/Content/vendors/popper.js/dist/umd/popper.min.js")
    @Scripts.Render("~/Content/vendors/bootstrap/dist/js/bootstrap.min.js")
    @Scripts.Render("~/Content/dist/js/jquery.slimscroll.js")
    @Scripts.Render("~/Content/vendors/jquery.redirect-master/jquery.redirect.js")
    @Scripts.Render("~/Content/dist/js/dropdown-bootstrap-extended.js")
    @Scripts.Render("~/Content/vendors/owl.carousel/dist/owl.carousel.min.js")
    @Scripts.Render("~/Content/dist/js/feather.min.js")
    @Scripts.Render("~/Scripts/Vendor/ParsleyJS/parsley.min.js")
    @Scripts.Render("~/Scripts/Vendor/ParsleyJS/i18n/es.js")
    @Scripts.Render("~/Content/dist/js/init.js")
    @Scripts.Render("~/Content/dist/js/login-data.js")

    <script src="~/Scripts/Helpers/Util.js?noCache=@Guid.NewGuid().ToString()"></script>
    <script src="~/Scripts/Login/Login.js?noCache=@Guid.NewGuid().ToString()"></script>

</body>
</html>
